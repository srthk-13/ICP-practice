class Solution {
    public long calculateScore(String s) {
        List<Integer>[] arr = new ArrayList[27];
        for (int i = 0; i < 27; i++) arr[i] = new ArrayList<>();
        long ans = 0;
        for (int i = 0; i < s.length(); i++) {
            int val = s.charAt(i) - 'a' + 1;
            int mirror = 26 - val + 1;
            if (!arr[mirror].isEmpty()) {
                int j = arr[mirror].remove(arr[mirror].size() - 1);
                ans += Math.abs(i - j);
            } else {
                arr[val].add(i);
            }
        }
        return ans;
    }
}
